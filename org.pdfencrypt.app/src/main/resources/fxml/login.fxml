<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefHeight="174.0" prefWidth="338.0" spacing="15.0" stylesheets="@styles/main.css" xmlns="http://javafx.com/javafx/13" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.pdfencrypt.gui.controller.LoginController">
   <children>
      <ImageView fitHeight="65.0" fitWidth="65.0" pickOnBounds="true" preserveRatio="true" styleClass="main-logo" />
      <VBox prefHeight="200.0" prefWidth="100.0">
         <children>
            <TextField fx:id="loginTextBox" promptText="%login.login" />
            <TextField fx:id="passwordTextBox" promptText="%login.password" />
         </children>
         <VBox.margin>
            <Insets left="20.0" right="20.0" />
         </VBox.margin>
      </VBox>
      <HBox alignment="TOP_CENTER" prefWidth="200.0" spacing="10.0">
         <children>
            <Button minWidth="100.0" mnemonicParsing="false" onAction="#login" text="%global.ok" />
            <Button minWidth="100.0" mnemonicParsing="false" onAction="#cancel" text="%global.cancel" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
